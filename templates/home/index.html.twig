            </aside> <!-- Sidebar -->
            <div class="col-md-8 border rounded px-3 py-2 mb-3">
                <div class="d-flex justify-content-between border-bottom mb-3">
                    <h2>Mes notes</h2>
                    <div>
                        <a href={{ path('app_note_new') }} class="btn btn-success"><i class="fas fa-plus"></i></a>
