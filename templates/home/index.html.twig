                <p><i class="fas fa-envelope mx-1"></i>{{ app.user.email }}</p>
                <hr class="mb-5">
                <a href={{ path('app_user_edit', {'id': app.user.id}) }} class="btn btn-dark mb-2">Modifier le profil</a>
